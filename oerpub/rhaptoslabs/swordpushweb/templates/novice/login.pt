<metal:use use-macro="newbase">
<tal:body metal:fill-slot="content">

<!-- TODO: add javascript to check that username and password are not empty -->

<div class="splashbox">
  <div class="splashheading">
    <img src="${request.static_url('oerpub.rhaptoslabs.swordpushweb:static/images/connexions_icon.png')}" width="51" height="59" align="left"/>
    Connexions Document Importer
  </div>
  <p>You need to sign in to Connexions to use this tool.</p>
  ${form.begin(request.route_url('login'))}
  ${form.csrf_token()}
  <input type="hidden" name="service_document_url" value="http://cnx.org/sword/servicedocument"/>
  <center>
    <table>
      <tr>
        <td><label for="${field_list[0][0]}">${field_list[0][1]}:</label></td>
        <td><input name="${field_list[0][0]}" type="text"/></td>
      </tr>
      <tr>
        <td><label for="${field_list[1][0]}">${field_list[1][1]}:</label></td>
        <td><input name="${field_list[1][0]}" type="password"/></td>
      </tr>
      <tr>
        <td colspan="2" align="right">${form.submit('form.submitted', 'Log in', class_='submit')}</td>
      </tr>
    </table>
  </center>
  ${form.end()}
  <p>If you do not yet have an account, go to
    <a href="http://cnx.org/join_form">the Connexions site</a>
    to create one.</p>
  <div align="right">
    <img src="${request.static_url('oerpub.rhaptoslabs.swordpushweb:static/images/sf.png')}" width="200"/>
  </div>
</div>
</tal:body>
</metal:use>
